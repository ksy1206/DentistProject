<!DOCTYPE HTML>
<html>
<head>
	## Header 설정 파일
	#parse("common/setting/header.vm")
</head> 
<body class="cbp-spmenu-push">
	<div class="main-content">
		
		## Left-Navigation
		#parse("factory/common/left-nav.vm")
		
		## Top-Info
		#parse("common/setting/top-info.vm")
		
		## main content start
		<div id="page-wrapper">
			<div class="main-page">
				<h3 style="color:#4f52ba;">
					<i class="fa fa-plus" aria-hidden="true"></i> 3차원 영상 정보
					<button  style="background-color:#4f52ba; color: white;float: right;" class="btn" type="button" onclick="fileUpload.fileUploadButton('Video');">영상 업로드 <span class="fa fa-plus"></span></button>
				</h3>
				<br>
				## 미리보기
				<div id="img_prev_div"></div>
				
				<div class="panel-body widget-shadow" style="min-height:300px;">
					<table class="table">
						<thead>
							<tr>
								<th style="text-align: center;">영상 정보</th>
							</tr>
						</thead>
					</table>
					#foreach($row in $imgList)
					<div class="col-md-6" style="margin-bottom:1em; text-align:center;">
					<video width="400" controls>
						<source src="$!row.fileUrl/$!row.fileName" type="video/mp4">
						Your browser does not support HTML5 video.
					</video>
					</div>
					#end
					
					## 사진이 없을경우
					#if($imgList.size() == 0)
						<p style="margin-top: 3em; margin-bottm: 3em; text-align:center;">등록된 영상이 없습니다.</p>
					#end
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>

		<form action="" method="post" enctype="multipart/form-data">
			<input data-role="fileupload" data-idx="img" type="file" name="files" style="position:absolute; left:-9999px; top:-9999px; visibility:hidden;">
		</form>

		## Footer 설정 파일
		#parse("common/setting/footer.vm")
	</div>
	
	## Left-Navagation Script
	#parse("common/setting/left-nav-script.vm")
	
	<script>
		function App() {
			var _this = this;
	
			## ENV
			_this.env = {};
			_this.env.memberNo = $!memberNo;
		}
	
		var app = new App();
	</script>
	
	## FileUpload Script
	<script src="/js/fileupload/vendor/jquery.ui.widget.js" type="text/javascript"></script>
	<script src="/js/fileupload/jquery.fileupload.js" type="text/javascript"></script>
	<script src="/js/fileupload/fileUpload.js" type="text/javascript"></script>
</body>
</html>